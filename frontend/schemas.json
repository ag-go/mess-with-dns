{
  "A": [
    {
      "label": "IPv4 Address",
      "name": "A",
      "type": "text",
      "validation": "matches:/[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+/",
      "validation-messages": {
        "matches": "Example: 1.2.3.4"
      }
    },
    {
      "label": "TTL",
      "name": "ttl",
      "type": "number",
      "validation": "required",
      "validation-messages": {
        "required": "Example: 60"
      }
    }
  ],
  "AAAA": [
    {
      "label": "IPv6 Address",
      "name": "AAAA",
      "type": "text",
      "validation": "matches:/[0-9a-fA-F:]+/",
